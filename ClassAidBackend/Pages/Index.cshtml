@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post" asp-page-handler="Regestration">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" pattern=".{6,}" required asp-for="Username" placeholder="Name">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" pattern=".{6,}" required asp-for="Password" type="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<p>@IndexModel.path</p>