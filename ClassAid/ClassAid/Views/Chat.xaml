<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:y="clr-namespace:ClassAid.Models.Schedule"
             xmlns:Components="clr-namespace:ClassAid.CustomComponents"
             xmlns:models="clr-namespace:ClassAid.Models"
             x:Class="ClassAid.Views.ChatHub">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ScrollView VerticalScrollBarVisibility="Never"
                        Grid.ColumnSpan="4"
                        Padding="10"
                        VerticalOptions="StartAndExpand"
                        HorizontalOptions="StartAndExpand"
                        HorizontalScrollBarVisibility="Never">
                <StackLayout>
                    <CollectionView x:Name="ChatViewBox">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ChatModel">
                                <Grid BackgroundColor="#FFF">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Sender}"
                                           TextColor="Black"
                                           FontSize="Title"/>
                                        <Label Text="{Binding Time}"
                                           TextColor="Black"
                                           FontSize="Small"/>
                                        <Label Text="{Binding Message}"
                                           TextColor="Black"
                                           FontSize="Body"/>
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
            <BoxView HeightRequest="1"
                     Grid.Row="1"
                     Grid.ColumnSpan="6"
                     BackgroundColor="#6264a7"
                     WidthRequest="350"></BoxView>
            <StackLayout Orientation="Horizontal"
                         Grid.Row="1"
                         Padding="10">
                <Components:ClassAidEntry x:Name="messageBox" 
                       WidthRequest="300"
                       Placeholder="Aa"
                       VerticalOptions="End"
                       HorizontalOptions="Start"
                       Margin="5"
                       Grid.ColumnSpan="5"/>
                <ImageButton x:Name="sendButton"
                        HeightRequest="25"
                        WidthRequest="25"
                             Margin="40,15,0,0"
                        CornerRadius="10"
                        Clicked="SendButton_Clicked"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        Grid.Column="5"
                        Source="logo.png"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>

