<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:users="clr-namespace:ClassAid.Models.Users"
             NavigationPage.HasNavigationBar="False"
             x:Class="ClassAid.Views.StudentProfile"
             xmlns:Components="clr-namespace:ClassAid.CustomComponents"
             x:Name="This">
    <ContentPage.BindingContext>
        <x:Reference Name="This"/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView HorizontalScrollBarVisibility="Never"
                    VerticalScrollBarVisibility="Never">
            <Grid BackgroundColor="#FFF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="240" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--#region Profile Heade-->
                <!--Profile Header-->
                <Image Source="avater.png"
                       Grid.RowSpan="2" Grid.ColumnSpan="2"
                       HeightRequest="80"
                       WidthRequest="80"
                       HorizontalOptions="Start" 
                       VerticalOptions="Start"
                       Margin="30,40,0,0"/>

                <Label Grid.Column="2" 
                       Grid.ColumnSpan="2" 
                       FontSize="14" Text="ID" 
                       Margin="5,30,0,0" 
                       TextColor="#6264a7"/>
                <Label Grid.Column="2"
                       Grid.ColumnSpan="2" 
                       FontSize="14" 
                       Text="Semester" 
                       Margin="5,55,0,0" 
                       TextColor="#6264a7"/>
                <Label Grid.Column="2" 
                       Grid.ColumnSpan="2" 
                       FontSize="14" 
                       Text="Section" 
                       Margin="5,80,0,0" 
                       TextColor="#6264a7"/>
                <Label Grid.Column="2" Grid.ColumnSpan="2"
                       FontSize="14" 
                       Text="Phone" 
                       Margin="5,105,0,0" 
                       TextColor="#6264a7"/>

                <Label Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="End" FontSize="14" Text=": " Margin="0,30,48,0" TextColor="#6264a7"/>
                <Label Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="End" FontSize="14" Text=": " Margin="0,55,48,0" TextColor="#6264a7"/>
                <Label Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="End" FontSize="14" Text=": " Margin="0,80,48,0" TextColor="#6264a7"/>
                <Label Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="End" FontSize="14" Text=": " Margin="0,105,48,0" TextColor="#6264a7"/>

                <Label x:Name="userID" 
                       Grid.Column="3" 
                       Grid.RowSpan="2"
                       Grid.ColumnSpan="3"
                       FontSize="14"
                       Margin="30,30,0,0"
                       TextColor="#6264a7"/>
                <Label x:Name="userSemester" 
                       Grid.Column="3" Grid.RowSpan="2"
                       Grid.ColumnSpan="3"
                       FontSize="14"
                       Margin="30,55,0,0"
                       TextColor="#6264a7"/>
                <Label x:Name="userSection" 
                       Grid.Column="3"
                       Grid.RowSpan="2" 
                       Grid.ColumnSpan="3" 
                       FontSize="14"
                       Margin="30,80,0,0" TextColor="#6264a7"/>
                <Label x:Name="userPhone" Grid.Column="3" 
                       Grid.RowSpan="2" 
                       Grid.ColumnSpan="3" 
                       FontSize="16"
                       Margin="30,105,0,0" TextColor="#6264a7"/>

                <!--Name, University Name and Logout-->
                <Label x:Name="userName" 
                       Grid.ColumnSpan="4"
                       FontSize="17" 
                       Margin="40,150,0,0" 
                       TextColor="#6264a7"/>
                <Label x:Name="userDepartment" 
                       Grid.ColumnSpan="5" 
                       FontSize="12"
                       Margin="40,175,0,0"
                       TextColor="#6264a7"/>
                <Label x:Name="userUniversity" 
                       Grid.ColumnSpan="4"
                       FontSize="14" 
                       Margin="40,195,0,0" TextColor="#6264a7"/>
                <Image/>
                <ImageButton x:Name="logoutBtn" 
                             Grid.Column="5"
                             BackgroundColor="Transparent"
                             Source="schedule.png"
                             HeightRequest="24" 
                             WidthRequest="24" 
                             HorizontalOptions="End" 
                             VerticalOptions="End"
                             Margin="0,0,30,40"/>
                <!--#endregion-->
                <!--#region Join Request area-->
                <!-- Join Request Title -->
                <Image Grid.Column="0"
                       Grid.Row="2"
                       Margin="0,0,0,0"
                       Source="schedule.png"
                       HeightRequest="24"
                       WidthRequest="24"
                       HorizontalOptions="End"
                       VerticalOptions="Start"/>
                <Label Text="Request"
                       Grid.Column="1"
                       Grid.Row="2"
                       FontSize="20"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       VerticalOptions="Start" 
                       Margin="5,0,0,0"
                       Grid.ColumnSpan="2"/>

                <!-- Join Request Content -->
                <CollectionView x:Name="RequestCollectionView"
                                SelectionMode="None"
                                Margin="0,35,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="users:Student">
                            <Frame>
                                <Grid BackgroundColor="#FFF">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <BoxView Grid.Row="0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start" 
                                             Margin="25,5,0,0"
                                             HeightRequest="10"
                                             WidthRequest="10"
                                             BackgroundColor="Black"
                                             CornerRadius="30"/>
                                    <BoxView Grid.Row="0"
                                             Grid.Column="1"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start" 
                                             HeightRequest="20"
                                             WidthRequest="2"
                                             BackgroundColor="Black"/>
                                    <Label x:Name="studentId"
                                           Text="{Binding ID}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           FontSize="18"
                                           TextColor="Gray"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start" 
                                           Grid.ColumnSpan="3"/>
                                    <Label x:Name="studentName"
                                           Text="{Binding Name}"
                                           Margin="0,25,0,0"
                                           Grid.Column="1"
                                           FontSize="14"
                                           TextColor="Gray"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start" 
                                           Grid.ColumnSpan="3"/>
                                    <ImageButton x:Name="acceptBtn" 
                                                 Grid.Column="4"
                                                 BackgroundColor="Transparent"
                                                 Source="schedule.png"
                                                 HeightRequest="24" 
                                                 WidthRequest="24" 
                                                 HorizontalOptions="End" 
                                                 VerticalOptions="Center"
                                                 Margin="0"/>

                                    <ImageButton x:Name="rejectBtn" 
                                                 Clicked="RejectBtn_Clicked"
                                                 Grid.Column="5"
                                                 BackgroundColor="Transparent"
                                                 Source="schedule.png"
                                                 HeightRequest="24" 
                                                 WidthRequest="24" 
                                                 HorizontalOptions="End" 
                                                 VerticalOptions="Center"
                                                 Margin="0,0,15,0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!--#endregion-->
                <!--#region Teacher-->
                <!-- Teacher List Title -->
                <Image Grid.Column="0"
                       Grid.Row="3"
                       Margin="0,0,5,0"
                       Source="schedule.png"
                       HeightRequest="24"
                       WidthRequest="24"
                       HorizontalOptions="End"
                       VerticalOptions="Start"/>
                <Label Text="Teacher"
                       Grid.Column="1"
                       Grid.Row="3"
                       FontSize="20"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       VerticalOptions="Start" 
                       Margin="5,0,0,0"
                       Grid.ColumnSpan="2"/>

                <!-- Teacher List Content -->
                <CollectionView x:Name="TeacherCollectionView"
                                SelectionMode="None"
                                Grid.Row="3"
                                Grid.ColumnSpan="6"
                                Margin="0,35,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="users:Admin">
                            <Frame>
                                <Grid BackgroundColor="#FFF">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <BoxView Grid.Row="0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start" 
                                             Margin="25,5,0,0"
                                             HeightRequest="10"
                                             WidthRequest="10"
                                             BackgroundColor="Black"
                                             CornerRadius="30"/>
                                    <BoxView Grid.Row="0"
                                             Grid.Column="1"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start" 
                                             HeightRequest="20"
                                             WidthRequest="2"
                                             BackgroundColor="Black"/>
                                    <Label x:Name="teacherName"
                                           Text="{Binding Name}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           FontSize="18"
                                           TextColor="Gray"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start" 
                                           Grid.ColumnSpan="3"/>
                                    <Label x:Name="teacherDesignation"
                                           Text=""
                                           Margin="0,25,0,0"
                                           Grid.Column="1"
                                           FontSize="14"
                                           TextColor="Gray"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start" 
                                           Grid.ColumnSpan="3"/>

                                    <ImageButton x:Name="teacherCallBtn" 
                                                 Grid.Column="5"
                                                 BackgroundColor="Transparent"
                                                 Source="schedule.png"
                                                 HeightRequest="24" 
                                                 WidthRequest="24" 
                                                 HorizontalOptions="End" 
                                                 VerticalOptions="Center"
                                                 Margin="0,0,15,0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!--#endregion-->
                <!--#region Classmate -->
                <!-- Classmate Title -->
                <Image Grid.Column="0"
                       Grid.Row="4"
                       Margin="0,0,5,0"
                       Source="schedule.png"
                       HeightRequest="24"
                       WidthRequest="24"
                       HorizontalOptions="End"
                       VerticalOptions="Start"/>
                <Label Text="Classmate"
                       Grid.Column="1"
                       Grid.Row="4"
                       FontSize="20"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       VerticalOptions="Start" 
                       Margin="5,0,0,0"
                       Grid.ColumnSpan="2"/>

                <!-- Classmate Content -->
                <CollectionView x:Name="ClassmateCollectionView"
                                SelectionMode="None"
                                Grid.Row="4"
                                Grid.ColumnSpan="6"
                                Margin="0,35,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="users:Student">
                            <Frame>
                                <Grid BackgroundColor="#FFF">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <BoxView Grid.Row="0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start" 
                                             Margin="25,5,0,0"
                                             HeightRequest="10"
                                             WidthRequest="10"
                                             BackgroundColor="Black"
                                             CornerRadius="30"/>
                                    <BoxView Grid.Row="0"
                                             Grid.Column="1"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start" 
                                             HeightRequest="20"
                                             WidthRequest="2"
                                             BackgroundColor="Black"/>
                                    <Label x:Name="studentId"
                                           Text="{Binding ID}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           FontSize="18"
                                           TextColor="Gray"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start" 
                                           Grid.ColumnSpan="3"/>
                                    <Label x:Name="studentName"
                                           Text="{Binding Name}"
                                           Margin="0,25,0,0"
                                           Grid.Column="1"
                                           FontSize="14"
                                           TextColor="Gray"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start" 
                                           Grid.ColumnSpan="3"/>

                                    <ImageButton x:Name="callBtn" 
                                                 Grid.Column="5"
                                                 BackgroundColor="Transparent"
                                                 Source="schedule.png"
                                                 HeightRequest="24" 
                                                 WidthRequest="24" 
                                                 HorizontalOptions="End" 
                                                 VerticalOptions="Center"
                                                 Margin="0,0,15,0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!--#endregion-->
                <!--#region Retake -->
                <Label Text="Name"
                       Grid.Row="1" Grid.ColumnSpan="6"  Margin="40,0,0,15"
                       FontSize="Header"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       VerticalOptions="Start"/>
                <!--<Grid x:Name="RetakeStudentArea" Grid.Row="1" Grid.ColumnSpan="6"  Margin="0,0,0,15">
                    <Components:ClassAidEntry x:Name="anotherTeamCode"
                           Placeholder="New CR Teamcode"
                           WidthRequest="110"
                            Grid.Column="0"
                            Grid.ColumnSpan="4"
                            Margin="40,0,0,0"/>
                    <Button x:Name="addAnotherAdmin"
                            Text="Add"
                            CornerRadius="30"
                            BackgroundColor="#6264a7"
                            Clicked="AddAnotherAdmin_Clicked"
                            Grid.Column="4"
                            Grid.ColumnSpan="2"
                            Margin="0,0,30,5"/>
                </Grid>-->
            </Grid>
            <!--#endregion-->
        </ScrollView>
    </ContentPage.Content>
</ContentPage>