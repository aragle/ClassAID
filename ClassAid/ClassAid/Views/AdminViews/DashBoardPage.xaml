<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassAid.Views.AdminViews.DashBoardPage"
             xmlns:vm="clr-namespace:ClassAid.ViewModels"
             xmlns:local="clr-namespace:ClassAid.Models.Schedule"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackLayout Orientation="Vertical" Padding="10">
                <Label x:Name="userName" FontSize="Large"/>
                <Label x:Name="userMail"/>
                <Label x:Name="userPhone"/>
                <Label x:Name="userID"/>
            </StackLayout>
            <RefreshView Grid.Row="1"
                     x:Name="scheduleRefreshView"
                     Refreshing="scheduleRefreshView_Refreshing">
                <CollectionView x:Name="scheduleView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:ScheduleModel">
                            <StackLayout Margin="5" 
                                     Padding="5"
                                     BackgroundColor="Beige">
                                <Label Margin="3" Text="{Binding Subject}"/>
                                <Label Margin="3" Text="{Binding Teacher.Name}"/>
                                <Label Margin="3" Text="{Binding CourseCode}"/>
                                <Label Margin="3" Text="{Binding StartTime}"/>
                                <Label Margin="3" Text="{Binding EndTime}"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <CollectionView x:Name="teacherListView"
                   Grid.Row="2">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:Teacher">
                        <StackLayout Padding="2" >
                            <Grid Margin="3"
                              BackgroundColor="LawnGreen">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Text="{Binding Name}"
                                   Margin="3"
                                   FontAttributes="Bold"/>
                                <Label Grid.Row="1"
                                   Margin="3"
                                   Text="{Binding Designation}"
                                   FontAttributes="Italic"/>
                            </Grid>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <CollectionView x:Name="eventsListView"
                            
                   Grid.Row="3">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:EventModel">
                        <StackLayout Padding="2" >
                            <Grid Margin="3"
                              BackgroundColor="Beige">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Text="{Binding Title}"
                                   Margin="3"
                                   FontAttributes="Bold"/>
                                <Label Grid.Row="1"
                                   Margin="3"
                                   Text="{Binding Details}"
                                   FontAttributes="Italic"/>
                            </Grid>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout Orientation="Horizontal"
                     Grid.Row="4"
                     Margin="5">
                <Button Text="Add Teacher"
                    Margin="2"
                    x:Name="teacherAddBtn"
                    Clicked="teacherAddBtn_Clicked"/>
                <Button Text="Add Schedule"
                    Margin="2"
                    x:Name="scheduleAddBtn"
                    Clicked="scheduleAddBtn_Clicked"/>
                <Button Text="Add Event"
                    Margin="2"
                    x:Name="eventAddBtn"
                    Clicked="eventAddBtn_Clicked"/>
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
