<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassAid.Views.AdminViews.AdminRegestrationPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#F7F7FF">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Start" Padding="40">
                <Image x:Name="imgBanner" 
                       Margin="50"
                       
                       Source="classaid_logo.png" 
                       HeightRequest="200" 
                       WidthRequest="200"></Image>
                <Entry x:Name="userName" 
                       Placeholder="Username"
                       TextChanged="form_TextChanged"
                       Margin="15,3"></Entry>
                <Entry x:Name="userPass"
                       Margin="15,3"
                       Placeholder="Password" 
                       TextChanged="form_TextChanged"
                       IsPassword="True"></Entry>
                </Frame>
                <Frame BorderColor="#8576F5" BackgroundColor="#F7F7FF" Padding="0" CornerRadius="30">
                        <Entry x:Name="userId" Margin="15,3"
                       TextChanged="form_TextChanged"
                       Placeholder="Student ID"></Entry>
                </Frame>
                <Frame BorderColor="#8576F5" BackgroundColor="#F7F7FF" Padding="0" CornerRadius="30">
                    <Entry x:Name="adminCode"
                       Margin="15,2"
                       TextChanged="form_TextChanged"
                       Placeholder="Admin Code"></Entry>
                </Frame>
                
                <Label Text="By clicking sign up, you follow our privacy policy and terms of services." Padding="15"/>


                <StackLayout  HorizontalOptions="CenterAndExpand"
                              Margin="15,2"
                              Orientation="Horizontal">
                    <Button x:Name="btnAdd" 
                            WidthRequest="300"
                            BackgroundColor="#8576F5"
                            CornerRadius="15"
                            IsEnabled="False"
                            Text="Signup" 
                            Clicked="btnAdd_Clicked"/>
                </StackLayout>
                <Label HorizontalOptions="Center" TextType="Html">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Already have an account? "/>
                            <Span Text="Log in" TextColor="#0078d4"/>
                            <Span Text=" instead."/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <StackLayout Orientation="Horizontal">
                    <!--<Label HorizontalOptions="CenterAndExpand" TextType="Html">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Mistakenly here? "/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>-->
                    <!--<Button x:Name="goBackButton" 
                            Text="Go Back"
                            Clicked="goBackButton_Clicked"/>-->
                </StackLayout>
                <Label HorizontalOptions="Center"
                       x:Name="resultText"
                       TextColor="GreenYellow">

                </Label>
                <ActivityIndicator x:Name="activityIndicator" IsRunning="False" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>