<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassAid.Views.AdminViews.Settings.AddTeacherPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start"
                     Orientation="Vertical"
                     Padding="2">
            <Entry x:Name="teacherName" 
                   Margin="5"
                   TextChanged="inputField_TextChanged"
                   Placeholder="Teacher Name"/>
            <Entry x:Name="teacherDesegnation"
                   Margin="5"
                   TextChanged="inputField_TextChanged"
                   Placeholder="Desegnation"/>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="addTeacherBtn" 
                    Clicked="addTeacherBtn_Clicked"
                    IsEnabled="False"
                    Text="Add" 
                    Margin="5"
                    HorizontalOptions="Start"/>
                <Button x:Name="goBackBtn" 
                        Clicked="goBackBtn_Clicked"
                        BackgroundColor="White"
                        TextColor="BlueViolet"
                        Text="Back" 
                        Margin="5"
                        HorizontalOptions="Start"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>