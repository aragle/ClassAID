<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="ClassAid.Views.SVG_Tester">
    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never"
                    HorizontalScrollBarVisibility="Never">
            <StackLayout>
                <StackLayout>
                    <!--Use https://respresso.io/image-converter for xvg to xml-->
                    <Image Source="svgfile.xml"/>
                    <Image Source="nature.xml"/>
                </StackLayout>
                <StackLayout>
                    <Button Text="Pick File" Clicked="Button_Clicked" HorizontalOptions="Center"  
               VerticalOptions="Center"/>
                    <Label Text="File Is :" x:Name="lbl"/>
                </StackLayout>
                <ListView x:Name="adminCodeList"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
    
