<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassAid.Views.ViewEventPage"
             xmlns:cardview="http://schemas.android.com/apk/res-auto"
             xmlns:schedule="clr-namespace:ClassAid.Models.Schedule" 
             xmlns:local="clr-namespace:ClassAid.Views.StudentViews"
             NavigationPage.HasNavigationBar="False"
             Title="Noticeboard">
    <ContentPage.Content>
        <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">

            <Grid BackgroundColor="#FFF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Orientation="Vertical" Margin="0,30,0,0">
                <CollectionView x:Name="eventListView"
                      SelectionMode="None">
                    <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="schedule:EventModel">
                                <Grid>
                                    <BoxView HorizontalOptions="End"
                                        VerticalOptions="Start" 
                                        Margin="0,20,15,0"
                                        HeightRequest="10"
                                        WidthRequest="10"
                                        BackgroundColor="#6264a7"
                                        CornerRadius="30"/>

                                    <BoxView Grid.Column="0"
                                         HorizontalOptions="End"
                                         VerticalOptions="Start"
                                         Margin="0,15,0,0"
                                         HeightRequest="18"
                                         WidthRequest="1"
                                         BackgroundColor="#6264a7"/>

                                    <Label Text="{Binding Title}"
                                       Grid.Column="1"
                                       FontSize="14"
                                       TextColor="Black"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start" 
                                       Margin="5,13,30,0"
                                       Grid.ColumnSpan="4"/>
                                    <Label Text="{Binding Details}"
                                       Grid.Column="1"
                                       FontSize="14"
                                       TextColor="Gray"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start" 
                                       Margin="0,80,30,20"
                                       Grid.ColumnSpan="4"/>
                                </Grid>
                            </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Grid>
                <Label Text="No More Notice"
                       Margin="0,0,0,30"
                       BackgroundColor="Transparent"
                                       FontSize="24"
                                       TextColor="LightGray"
                                       HorizontalOptions="Center"
                                       VerticalOptions="End" 
                                       Grid.ColumnSpan="5"/>
                </Grid>
            </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>