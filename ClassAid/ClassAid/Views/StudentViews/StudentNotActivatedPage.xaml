<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassAid.Views.StudentViews.StudentNotActivatedPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="ErrorText" 
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <Button x:Name="Call"
                    Text="Call"
                    Clicked="Call_Clicked"/>
            <Button x:Name="SendRequest"
                    IsVisible="false"
                    Text="Send Request"
                    Clicked="SendRequest_Clicked"/>
            <Button x:Name="LogOut"
                    Text="Log Out"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>